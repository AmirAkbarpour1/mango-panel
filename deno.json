{
  "importMap": "import_map.json",
  "tasks": {
    "dev": "deno --allow-net --allow-env --allow-import --allow-read --watch src/index.ts",
    "format": "deno fmt",
    "lint": "deno lint"
  },
  "lint": {
    "include": ["src/"],
    "rules": {
      "tags": ["recommended"]
    },
    "plugins": ["jsr:@amirakbarpour/no-relative-imports"]
  },
  "fmt": {
    "include": ["/"],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
